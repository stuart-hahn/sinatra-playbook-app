  <body>
    <div id="page-container">
      <div class="wrapper">
      <nav>
        <ul class="nav">
          <li><a href="/">Home</a></li>
          <li><a href="/plays">All Plays</a></li>
          <% if !logged_in? %>
            <li><a href="/signup">Signup</a></li>
            <li><a href="/login">Log In</a></li>
          <% end %>
          <% if logged_in? %>
            <li><a href="/users/<%= @current_user.id %>">My Plays</a></li>
            <li><a href="/logout">Log Out</a></li>
          <% end %>
        </ul>
      </nav>
          <% if flash[:message] %>
            <h3 class="error"><%= flash[:message] %></h3>
          <% end %>
          <%= yield %>
  
        <footer class="branding">
          <small>&copy; 2019 <strong>SinatraPlaybookApp</strong></small>
        </footer>
      </div>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
